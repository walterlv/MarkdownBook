<Page
    x:Class="Walterlv.MarkdownBook.UI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Walterlv.MarkdownBook.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <SplitView x:Name="NavigationSplitView" Grid.Column="0" DisplayMode="CompactOverlay">
            <SplitView.Pane>
                <RelativePanel>
                    <ToggleButton Style="{StaticResource SplitViewTogglePaneButtonStyle}"
                                  IsChecked="{Binding IsPaneOpen, ElementName=NavigationSplitView, Mode=TwoWay}">
                        
                    </ToggleButton>
                </RelativePanel>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame Background="#1F0080FF" SourcePageType="local:NotebookPage"/>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>
